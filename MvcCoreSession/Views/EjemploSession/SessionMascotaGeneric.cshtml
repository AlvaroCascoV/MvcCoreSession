@{
    Mascota mascota = ViewData["MASCOTA"] as Mascota;
}

<h1 style="color:green">
    Session mascota Generic
</h1>

<p>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaGeneric" asp-route-accion="almacenar" class="btn btn-primary">Almacenar</a>
    <a asp-controller="EjemploSession" asp-action="SessionMascotaGeneric" asp-route-accion="mostrar" class="btn btn-secondary">Mostrar</a>
</p>

@if (mascota != null)
{
    <h1 style="color:green">
        Nombre: @mascota.Nombre, Raza: @mascota.Raza, Edad: @mascota.Edad
    </h1>
}